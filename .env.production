# Production Environment Configuration for Railway
# Copy these to Railway dashboard → Service → Variables

# Server Configuration
API_PORT=8080
ENV=production

# Database (Railway automatically provides these via service references)
# Use Railway's reference syntax:
POSTGRES_HOST=${{Postgres.PGHOST}}
POSTGRES_PORT=${{Postgres.PGPORT}}
POSTGRES_USER=${{Postgres.PGUSER}}
POSTGRES_PASSWORD=${{Postgres.PGPASSWORD}}
POSTGRES_DB=${{Postgres.PGDATABASE}}
POSTGRES_SSLMODE=require
POSTGRES_MAX_CONNS=25
POSTGRES_MIN_CONNS=5

# Redis (Railway automatically provides these via service references)
REDIS_HOST=${{Redis.REDIS_HOST}}
REDIS_PORT=${{Redis.REDIS_PORT}}
REDIS_PASSWORD=${{Redis.REDIS_PASSWORD}}
REDIS_DB=0

# S3/Object Storage (configure if using external storage)
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_BUCKET=zapiki-proofs-prod
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
# S3_USE_SSL=true

# Proof System Configuration
ENABLE_COMMITMENT=true
ENABLE_GROTH16=true
ENABLE_PLONK=true
ENABLE_STARK=false

# Rate Limiting (Production values)
RATE_LIMIT_FREE_TIER=100
RATE_LIMIT_PRO_TIER=10000

# Server Timeouts (seconds)
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_IDLE_TIMEOUT=120

# Worker Configuration (if deploying worker separately)
WORKER_CONCURRENCY=10
