# Server Configuration
API_PORT=8080
ENV=development

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=zapiki
POSTGRES_PASSWORD=zapiki_password_change_me
POSTGRES_DB=zapiki
POSTGRES_SSLMODE=disable
POSTGRES_MAX_CONNS=25
POSTGRES_MIN_CONNS=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# S3/Minio Configuration (for future use)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=zapiki-proofs
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false

# Proof System Configuration
ENABLE_COMMITMENT=true
ENABLE_GROTH16=false
ENABLE_PLONK=false
ENABLE_STARK=false

# Rate Limiting
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_PRO_TIER=1000

# Server Timeouts (seconds)
SERVER_READ_TIMEOUT=15
SERVER_WRITE_TIMEOUT=15
SERVER_IDLE_TIMEOUT=60
